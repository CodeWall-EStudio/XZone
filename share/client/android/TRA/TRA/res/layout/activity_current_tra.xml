<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:weightSum="2"
              android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:gravity="center"
            android:background="@color/title_tips_bg_color"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_height="80px">
        <TextView
                android:text="已加入 : "
                android:textAppearance="?android:textAppearanceMedium"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="80px"/>
        <TextView
                android:id="@+id/title_tips"
                android:singleLine="true"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="某某的课某某的课某某的课某某的课某某的课某某的课某某的课某某的课某某的课"
                android:layout_width="wrap_content"
                android:textColor="@color/bg"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tra_info_detail_wrapper"
            android:id="@+id/listview"
            android:layout_weight="2"
            android:stackFromBottom="true"
            android:transcriptMode="alwaysScroll"
            ></ListView>
    <LinearLayout
            android:layout_above="@+id/join_button"
            android:layout_below="@+id/tra_info_detail_wrapper"
            android:layout_height="140px"
            android:layout_width="match_parent"
            android:weightSum="3"
            android:layout_weight="1"
            android:background="@android:color/black"
            android:id="@+id/collection"
            android:paddingBottom="0dp">
        <TextView
                style="@style/buttonNegative"
                android:paddingTop="14dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="拍照"
                android:id="@+id/btnPhoto"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:drawableTop="@drawable/btn_photo"
                android:layout_marginRight="1dp"/>

        <TextView
                style="@style/buttonNegative"
                android:paddingTop="14dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="录像"
                android:id="@+id/btnRecordVideo"
                android:drawableTop="@drawable/btn_video_record"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:layout_marginRight="1dp"
                />
        <TextView
                style="@style/buttonNegative"
                android:paddingTop="14dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="评论"
                android:drawableTop="@drawable/btn_text"
                android:id="@+id/btnText"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                />

    </LinearLayout>
    <LinearLayout
            android:id="@+id/join_button"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/button_height"
            android:layout_alignParentBottom="true"
            android:visibility="visible"
            android:orientation="horizontal">
        <TextView

                style="@style/buttonPositive"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="退出活动"
                android:id="@+id/btnQuit"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"

                />
    </LinearLayout>
</LinearLayout>