<?xml version="1.0" encoding="utf-8"?>

<TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_row="1"
        android:weightSum="2"
        android:layout_alignParentBottom="true"
        android:id="@+id/collection"
        android:visibility="visible"
        >

    <TableRow
            android:layout_width="match_parent"
            android:weightSum="3"
            android:layout_weight="1"
            android:paddingBottom="1dp">
        <TextView
                android:padding="10dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="拍照"
                android:id="@+id/btnPhoto"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:drawableTop="@drawable/btn_photo"
                android:background="@drawable/btn_bg"
                android:layout_marginRight="1dp"/>

        <TextView
                android:padding="10dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="录像"
                android:id="@+id/btnRecordVideo"
                android:drawableTop="@drawable/btn_video_record"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/btn_bg"
                android:layout_marginRight="1dp"
                />
        <TextView
                android:padding="10dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="评论"
                android:drawableTop="@drawable/btn_text"
                android:id="@+id/btnText"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/btn_bg"
                />

    </TableRow>

    <TableRow
            android:layout_width="match_parent"
            android:weightSum="3"
            android:layout_weight="1"
            android:paddingBottom="1dp">

        <TextView
                android:padding="10dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="退出"
                android:src="@android:drawable/arrow_down_float"
                android:id="@+id/btnQuit"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/btn_bg"
                android:layout_marginRight="1dp"
                />


        <TextView
                android:padding="10dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="涂鸦"
                android:id="@+id/btnDraw"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/btn_bg"
                android:drawableTop="@drawable/btn_draw"
                android:layout_marginRight="1dp"
                />
        <TextView
                android:padding="10dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="录音"
                android:id="@+id/btnRecordAudio"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/btn_bg"
                android:drawableTop="@drawable/btn_audio_record"
                />
    </TableRow>
</TableLayout>