<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:id="@+id/panel"
        android:orientation="vertical"
        android:layoutAnimation="@anim/panel_in"
        android:padding="5dp"
        android:layout_height="wrap_content">
    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"
            android:weightSum="2"
            android:id="@+id/collection"
            android:visibility="visible"
            >

        <TableRow
                android:layout_width="match_parent"
                android:weightSum="3"
                android:layout_weight="1"
                android:paddingBottom="1dp">
            <ImageButton
                    android:padding="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@null"
                    android:id="@+id/btnPhoto"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:src="@drawable/btn_photo"
                    android:background="@drawable/btn_bg"
                    android:layout_marginRight="1dp"/>
            <ImageButton
                    android:padding="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@null"
                    android:src="@drawable/btn_text"
                    android:id="@+id/btnText"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/btn_bg"
                    android:layout_marginRight="1dp"
                    />
            <ImageButton
                    android:padding="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@null"
                    android:src="@android:drawable/arrow_down_float"
                    android:id="@+id/btnHidePanel"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/btn_bg"

                    />
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:weightSum="3"
                android:layout_weight="1"
                android:paddingBottom="1dp">
            <ImageButton
                    android:padding="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@null"
                    android:id="@+id/btnRecordVideo"
                    android:src="@drawable/btn_video_record"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/btn_bg"

                    android:layout_marginRight="1dp"/>
            <ImageButton
                    android:padding="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@null"
                    android:id="@+id/btnDraw"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/btn_bg"
                    android:src="@drawable/btn_draw"
                    android:layout_marginRight="1dp"
                    />
            <ImageButton
                    android:padding="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@null"
                    android:id="@+id/btnRecordAudio"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/btn_bg"
                    android:src="@drawable/btn_audio_record"

                    />
        </TableRow>
    </TableLayout>

    <ImageButton
            android:src="@android:drawable/arrow_up_float"
            android:layout_width="fill_parent"
            android:visibility="gone"
            android:background="@drawable/btn_bg"
            android:id="@+id/btnShowPanel"
            android:layout_alignParentBottom="true"
            android:layout_height="50dp"/>
</LinearLayout>